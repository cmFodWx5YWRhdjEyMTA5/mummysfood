<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp48">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set delivery location"
        android:layout_marginTop="@dimen/sp16"
        android:textColor="@color/black_effective"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp8"/>


    <TextView
        android:id="@+id/locationCons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/black_effective"
        android:textSize="@dimen/sp14"
        android:layout_marginLeft="@dimen/dp16"/>

    <EditText
        android:id="@+id/locationMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/sp14"
        android:layout_marginRight="@dimen/sp16"
        android:layout_marginLeft="@dimen/dp16"/>
    <View
        android:background="@color/gray"
        android:layout_marginTop="@dimen/dp4"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_height="0.5dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/sp16"
        android:layout_marginBottom="@dimen/sp16"
        android:layout_marginTop="@dimen/dp8"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/flatNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:hint="House /Flat No"
             />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/sp16"
        android:layout_marginBottom="@dimen/sp16"
        android:layout_marginTop="@dimen/dp8"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/landMark"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address Type"
        android:layout_marginTop="@dimen/sp16"
        android:textColor="@color/black_effective"
        android:layout_gravity="center"
        android:gravity="start"
        android:textSize="@dimen/sp14"
        android:layout_marginBottom="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"/>


    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Home"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Office" />


        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Other" />

    </RadioGroup>

    <Button
        android:id="@+id/saveUs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp32"
        android:layout_marginTop="@dimen/dp16"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        />

</LinearLayout>
