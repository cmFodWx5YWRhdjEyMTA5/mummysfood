<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    tools:context=".activities.FilterActivtiy">


    <android.support.v7.widget.SearchView
        android:id="@+id/searchValue"
        android:layout_width="match_parent"
        android:background="@drawable/fill_rounded_white_color"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginTop="@dimen/dp4"
        android:layout_height="@dimen/dp48"></android.support.v7.widget.SearchView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/filter_recyclerview_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchValue"
        android:layout_margin="@dimen/dp12"/>

</RelativeLayout>