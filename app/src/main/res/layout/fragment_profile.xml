<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.mummysfood.fragments.OrderDetailsFragment"
    android:background="@color/white_smoke">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/homeToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeToolbar"
            android:elevation="@dimen/dp4"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:titleTextColor="@color/white"
            app:title="@string/profile"
            app:titleTextColor="@color/white"
            style="@style/textviewregular">
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp16">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp150"
                    android:src="@mipmap/pilot1"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/dp2"
                    app:civ_shadow="false" />
                <RelativeLayout
                    android:id="@+id/update_profile_image"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_alignEnd="@+id/profile_image"
                    android:layout_alignBottom="@+id/profile_image"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_camera_black_18dp"
                        android:tint="@color/white" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pilot_name"
                    style="@style/textviewbold"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/edit_icon"
                    android:tint="@color/gray"
                    android:layout_marginStart="@dimen/dp4"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_rating_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="visible">
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RatingBar"
                    android:rating="4.5"/>
                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/user_rating_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    style="@style/textviewbold"
                    android:textColor="@color/gray"
                    android:layout_marginStart="@dimen/dp4"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp16">

            <ImageView
                android:id="@+id/edit_about_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/edit_icon"
                android:tint="@color/gray"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:weightSum="1">

                <in.mummysfood.widgets.CkdTextview
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/about"
                    android:textColor="@color/black" />

                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/profile_about"
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/kitchen_description"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:weightSum="1">

                <in.mummysfood.widgets.CkdTextview
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/food_type"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="horizontal">

                    <in.mummysfood.widgets.CkdTextview
                        style="@style/textviewregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/veg"
                        android:textColor="@color/green" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/is_vagitarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_marginStart="@dimen/dp4" />

                    <in.mummysfood.widgets.CkdTextview
                        style="@style/textviewregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/veg_nonveg"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/expert_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:weightSum="1"
                android:visibility="visible">

                <in.mummysfood.widgets.CkdTextview
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/experties_txt"
                    android:textColor="@color/black" />

                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/user_level"
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/experties_level"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/active_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:weightSum="1"
                android:visibility="visible">

                <in.mummysfood.widgets.CkdTextview
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/active_hours_txt"
                    android:textColor="@color/black" />

                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/active_hour"
                    style="@style/textviewregular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/active_time"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <in.mummysfood.widgets.CkdTextview
                android:id="@+id/active_hour_see_more"
                style="@style/textviewregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp8"
                android:text="@string/see_more_txt"
                android:textColor="@color/black"
                android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/kitchen_media_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <in.mummysfood.widgets.CkdTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kitchen_txt"
                android:textColor="@color/black"
                style="@style/textviewregular"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp16"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/dp100"
                            android:layout_height="@dimen/dp100"
                            android:src="@mipmap/pilot2"
                            android:layout_marginEnd="@dimen/dp2"/>
                        <ImageView
                            android:layout_width="@dimen/dp100"
                            android:layout_height="@dimen/dp100"
                            android:src="@mipmap/pilot2"
                            android:layout_marginEnd="@dimen/dp2"/>
                        <RelativeLayout
                            android:layout_width="@dimen/dp100"
                            android:layout_height="@dimen/dp100">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/pilot2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:alpha="0.6"/>
                            <in.mummysfood.widgets.CkdTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4+"
                                android:textSize="@dimen/sp24"
                                android:textColor="@color/white"
                                style="@style/textviewbold"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/dp8">
                    <in.mummysfood.widgets.CkdTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_update"
                        android:textColor="@color/black"
                        style="@style/textviewregular"
                        android:layout_toStartOf="@+id/updated_date"/>
                    <in.mummysfood.widgets.CkdTextview
                        android:id="@+id/updated_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/black"
                        style="@style/textviewregular"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

