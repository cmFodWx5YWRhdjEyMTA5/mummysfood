<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp2"
    android:padding="@dimen/dp8"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/relativeLayout"
            app:cardCornerRadius="@dimen/dp4"
            app:cardElevation="@dimen/dp2"
            android:padding="@dimen/dp4"
            android:background="@drawable/fill_rounded_white_color"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/food_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@mipmap/foodimage"
                android:scaleType="fitXY"
                />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8">
                <in.ckd.calenderkhanado.widgets.CkdTextview
                    android:id="@+id/populor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/popular"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/colorPrimary"
                    style="@style/textviewbold"/>
                <in.ckd.calenderkhanado.widgets.CkdTextview
                    android:id="@+id/food_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jain_mini_thali"
                    android:textColor="@color/black"
                    style="@style/textviewbold"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp14"
                    android:maxLines="2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/food_price"
                        style="@style/textviewbold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/price"
                        android:textColor="@color/colorPrimary" />

                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/chef_name"
                        style="@style/textviewregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:text="@string/pilot_name"
                        android:visibility="visible" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textColor="@color/black"
                        style="@style/textviewbold"
                        android:textSize="@dimen/sp14"/>
                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/order_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5km"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/colorPrimary"
                        style="@style/textviewbold"
                        android:layout_marginStart="@dimen/dp4"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>