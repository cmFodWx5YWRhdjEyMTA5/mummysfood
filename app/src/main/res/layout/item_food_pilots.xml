<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp8">

    <LinearLayout
        android:layout_width="@dimen/dp180"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp4">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/relativeLayout"
            app:cardCornerRadius="@dimen/dp4"
            app:cardElevation="@dimen/dp2"
            android:padding="@dimen/dp4"
            android:background="@drawable/fill_rounded_white_color"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/food_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@mipmap/foodimage"
                android:scaleType="fitXY"
                />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/populor"
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="wrap_content"
                        android:text="@string/popular"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/colorPrimary"
                        style="@style/textviewbold"/>

                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/food_price"
                        style="@style/textviewbold"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:src="@mipmap/food_symbol"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/green"/>
                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/food_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jain_mini_thali"
                        android:textColor="@color/black"
                        style="@style/textviewbold"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp14"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/dp2"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/chef_name"
                        style="@style/textviewregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/food_price"
                        android:textSize="@dimen/sp12"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp2"
                        android:text="@string/pilot_name"
                        android:visibility="gone" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textColor="@color/black"
                        style="@style/textviewbold"
                        android:textSize="@dimen/sp10"/>
                    <in.ckd.calenderkhanado.widgets.CkdTextview
                        android:id="@+id/order_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5km"
                        android:textSize="@dimen/sp10"
                        android:textColor="@color/colorPrimary"
                        style="@style/textviewbold"
                        android:layout_marginStart="@dimen/dp4"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>