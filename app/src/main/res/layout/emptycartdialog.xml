<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp16"
    android:background="@drawable/fill_rounded_white_color"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/emptyCartimage"
        android:src="@drawable/ic_icon_shopping_cart"
        android:layout_width="@dimen/dp32"
        android:tint="@color/black"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_height="@dimen/dp32"/>

    <com.mf.mumizzfood.widgets.CkdTextview
        android:id="@+id/permissionDesc"
        android:text="Your Cart is empty please add some food in your cart"
        android:textSize="16sp"
        android:padding="@dimen/dp8"
        style="@style/textviewregular"
        android:layout_marginTop="@dimen/dp4"
        android:layout_toEndOf="@+id/emptyCartimage"
        android:textColor="@color/black_effective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:layout_below="@+id/permissionDesc"
        android:layout_marginTop="@dimen/dp4"
        android:gravity="end"
        android:layout_height="wrap_content">

        <com.mf.mumizzfood.widgets.CkdTextview
            android:id="@+id/permissionPos"
            android:text="Okay"
            android:textSize="14sp"
            android:background="@drawable/border_primary"
            android:layout_marginTop="@dimen/dp8"
            android:padding="6dp"
            style="@style/textviewbold"
            android:textColor="@color/colorPrimary"
            android:layout_width="@dimen/dp100"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>