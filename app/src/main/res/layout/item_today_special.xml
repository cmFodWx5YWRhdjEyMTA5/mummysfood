<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fill_recyce_home_border"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp8">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp2"
            android:layout_marginBottom="@dimen/dp8"
            android:id="@+id/relativeLayout"
            app:cardCornerRadius="@dimen/dp4"
            android:background="@drawable/rounded_white_smoke_bg"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/food_image_bg"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:id="@+id/my_image_view_special"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp64"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_gravity="end|bottom">
                <RelativeLayout
                    android:id="@+id/order_star"
                    android:layout_width="@dimen/dp56"
                    android:layout_height="@dimen/dp32"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/white_vector">
                    <ImageView
                        android:layout_width="@dimen/dp32"
                        android:layout_height="@dimen/dp32"
                        android:src="@mipmap/star_filled"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/dp8"
                        android:padding="@dimen/dp4"
                        />

                </RelativeLayout>
                <com.mf.mumizzfood.widgets.CkdTextview
                    android:id="@+id/order_rating"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:layout_alignEnd="@+id/order_star"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/balloon_bg_down"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/dp2"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp2"
            android:layout_marginBottom="@dimen/dp8">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/vegSysmbol"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:src="@mipmap/food_symbol"
                    android:layout_alignParentStart="true"
                    android:tint="@color/green"
                    android:layout_marginTop="@dimen/dp4"/>
                <com.mf.mumizzfood.widgets.CkdTextview
                    android:id="@+id/order_titile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jain_mini_thali"
                    android:textColor="@color/black"
                    style="@style/textviewbold"
                    android:textSize="@dimen/sp14"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_toEndOf="@+id/vegSysmbol"
                    android:layout_marginStart="@dimen/dp2"/>
                <com.mf.mumizzfood.widgets.CkdTextview
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    style="@style/textviewbold"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <com.mf.mumizzfood.widgets.CkdTextview
                android:id="@+id/chef_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serving - Anshita Gandhi"
                style="@style/textviewbold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.mf.mumizzfood.widgets.CkdTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance"
                    android:textColor="@color/black"
                    style="@style/textviewbold"
                    android:textSize="@dimen/sp10"/>
                <com.mf.mumizzfood.widgets.CkdTextview
                    android:id="@+id/order_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5km"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/colorPrimary"
                    style="@style/textviewbold"
                    android:layout_marginStart="@dimen/dp4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
