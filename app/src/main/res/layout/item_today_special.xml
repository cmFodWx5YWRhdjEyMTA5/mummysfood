<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp6">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp8"
            android:id="@+id/relativeLayout"
            app:cardCornerRadius="@dimen/dp8"
            app:cardElevation="@dimen/dp2"
            android:background="@drawable/rounded_white_smoke_bg"
            android:padding="@dimen/dp2"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/food_image_bg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RatingBar"
                android:rating="4.5"
                android:background="@color/white"
                android:layout_gravity="end|bottom"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginStart="@dimen/dp2"
            android:layout_marginEnd="@dimen/dp2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/order_titile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jain_mini_thali"
                    android:textColor="@color/black"
                    style="@style/textviewregular"
                    android:layout_alignParentStart="true"/>
                <in.mummysfood.widgets.CkdTextview
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    style="@style/textviewregular"/>
            </RelativeLayout>
            <in.mummysfood.widgets.CkdTextview
                android:id="@+id/chef_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serving - Anshita Gandhi"
                style="@style/textviewregular"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
